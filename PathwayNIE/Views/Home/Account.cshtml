@{
}
@model PathwayNIE.Models.Entities.UserLogin

<body>
    <h3>Имя пользователя</h3>
    <br />
    <label>@Model.UserName</label>
    <br/>
    <br/>
    <h3>Достижения</h3>
    <br />
    @foreach (Achievement item in ViewBag.Achievement)
    {
        <label style="font-size:24px">Название: @item.Name</label>
        <br/>
        <label style="font-size:16px">Содержание: @item.Content</label>
        <br/>
        if (@item.IsAchived)
        {
            <label style="font-size:16px">Выполнено: Да</label>
        }
        else
        {
            <label style="font-size:16px">Выполнено: Нет</label>
        }
        
        <br />
        <br />
    }
</body>