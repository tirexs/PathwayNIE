@model PathwayNIE.Models.Entities.UserLogin
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Home" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="UserName">Введите UserName</label><br />
            <input type="text" asp-for="UserName" />
            <span asp-validation-for="UserName" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <select name="role">
            @foreach (var item in ViewBag.Roles)
            {
                <option>@item</option>
            }
        </select>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>